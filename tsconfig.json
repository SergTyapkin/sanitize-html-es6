{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",

    /* Modules */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },

    /* Bundler mode */
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmit": false,
    "incremental": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./node_modules"],
    "types": ["jest"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "vite.config.{js,ts,mjs,mts}", "tests"]
}
